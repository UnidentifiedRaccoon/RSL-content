{
  "kind": "collectionType",
  "collectionName": "modules",
  "info": {
    "singularName": "module",
    "pluralName": "modules",
    "displayName": "Module",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text",
      "required": false
    },
    "lectures": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::lecture.lecture"
    },
    "status": {
      "type": "component",
      "repeatable": false,
      "component": "common-enums.release-status",
      "required": true
    },
    "pictureURL": {
      "type": "string"
    },
    "picture": {
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ],
      "type": "media",
      "multiple": false
    }
  }
}
